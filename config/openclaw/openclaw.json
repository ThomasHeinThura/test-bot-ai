## OpenClaw Configuration with WhatsApp
## Location: config/openclaw/openclaw.json

{
  "logging": {
    "level": "info"
  },
  "agent": {
    "model": "anthropic/claude-opus-4-5",
    "workspace": "/home/node/.openclaw/workspace",
    "thinkingDefault": "medium",
    "timeoutSeconds": 1800,
    "heartbeat": {
      "every": "0m"
    }
  },
  "gateway": {
    "mode": "local",
    "bind": "lan",
    "port": 18789,
    "auth": {
      "mode": "token"
    }
  },
  "channels": {
    "whatsapp": {
      "enabled": true,
      "allowFrom": [],
      "groups": {
        "*": {
          "requireMention": true
        }
      }
    }
  },
  "routing": {
    "groupChat": {
      "mentionPatterns": ["@openclaw", "openclaw"]
    }
  },
  "session": {
    "scope": "per-sender",
    "resetTriggers": ["/new", "/reset"],
    "reset": {
      "mode": "daily",
      "atHour": 4,
      "idleMinutes": 10080
    }
  }
}
